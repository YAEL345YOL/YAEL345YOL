{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "session",
                    "style": "powerline",
                    "template": "{{ .UserName }}"
                },
                {
                    "type": "battery",
                    "style": "powerline",
                    "template": "{{ .Percentage }}"
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "template": "{{ if .BranchStatus }}{{ .BranchStatus }}{{ end }}"  
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "template": "{{ .Path }}"
                }
            ]
        }
    ]
}