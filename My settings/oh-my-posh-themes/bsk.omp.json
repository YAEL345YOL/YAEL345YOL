{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "session",
                    "style": "powerline",
                    "background" : "#8C9EFF",
                    "template": "{{ .UserName }}"
                },
                {
                    "type": "battery",
                    "style": "powerline",
                    "background_templates": [
                        "{{if le .Percentage 20.0}}#F23535{{end}}",
                        "{{if le .Porcentage 40.0}}#F21616{{end}}",
                        "{{if le .Porcentage 60.0}}#590505{{end}}",
                        "{{if le .Porcentage 80.0}}#8C0303{{end}}",
                        "{{if le .Porcentage 100.0}}#F2EA79{{end}}"                        
                    ],
                    "template": "{{ .Percentage }}"
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "background" : "#4A148C",
                    "template": "{{ if .BranchStatus }}\uE0A0{{ end }}"  
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "background" : "#212121",
                    "template": "{{ .Path }}"
                }
            ]
        }
    ]
}