{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "session",
                    "style": "powerline",
                    "template": "{{ .UserName }}{{ if .Root }}!{{ end }}"
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "template": "{{ .Path }}"
                }
            ]
        }
    ]
}