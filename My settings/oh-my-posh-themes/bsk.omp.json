{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "session",
                    "style": "powerline",
                    "background" : "#000000",
                    "template": "󰠥 {{ .UserName }}"
                },
                {
                    "type": "battery",
                    "style": "powerline",
                    "background_templates": [
                        "{{ if le .Percentage 20 }}#F23535{{ end }}",
                        "{{ if le .Percentage 40 }}#F21616{{ end }}",
                        "{{ if le .Percentage 60 }}#590505{{ end }}",
                        "{{ if le .Percentage 80 }}#8C0303{{ end }}",
                        "{{ if le .Percentage 100 }}#F2EA79{{ end }}"                        
                    ],
                    "template": "{{ .Icon }}{{ .Percentage }}",
                    "properties": {
                        "discharging_icon": "󱟨",
                        "charging_icon": "󱟦",
                        "charged_icon": "󱟢"
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "background" : "#330d61",
                    "template": "{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uF046 {{ .Staging.String }}{{ end }}"  
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "background" : "#000000",
                    "template": "{{ .Path }}"
                }
            ]
        }
    ]
}