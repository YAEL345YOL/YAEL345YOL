{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "template": "{{if .Root }}{{!}}{{}}{{ .UserName }}"
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "foreground" : "#ffffff",
                    "background" : "#0D47A1",
                    "properties": {
                        "style": "folder"
                    }
                }
            ]
        }
    ]
}